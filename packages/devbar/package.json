{
  "name": "@ytspar/devbar",
  "version": "1.6.0",
  "type": "module",
  "private": false,
  "description": "Development toolbar and utilities with Sweetlink integration - pure vanilla JS, no framework dependencies",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ytspar/devbar.git",
    "directory": "packages/devbar"
  },
  "keywords": [
    "development",
    "debug",
    "devbar",
    "sweetlink",
    "vanilla-js"
  ],
  "author": "ytspar",
  "license": "MIT",
  "sideEffects": [
    "./dist/GlobalDevBar.js"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./GlobalDevBar": {
      "types": "./dist/GlobalDevBar.d.ts",
      "import": "./dist/GlobalDevBar.js",
      "default": "./dist/GlobalDevBar.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "bugs": {
    "url": "https://github.com/ytspar/devbar/issues"
  },
  "homepage": "https://github.com/ytspar/devbar/tree/main/packages/devbar#readme",
  "scripts": {
    "prepublishOnly": "rm -rf dist && tsc",
    "build": "rm -rf dist && tsc",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ytspar/sweetlink": "workspace:^",
    "axe-core": "^4.10.2",
    "html2canvas-pro": "^1.5.13"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "^5.0.0"
  }
}
